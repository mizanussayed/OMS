<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:OMS.Pages"
    Title="OMS"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Dashboard"
             Icon="icon_dashboard.svg">
            <ShellContent 
                Route="Dashboard"
                ContentTemplate="{DataTemplate pages:DashboardPage}" />
        </Tab>

        <Tab Title="Inventory"
             Icon="icon_inventory.svg">
            <ShellContent 
                Route="ClothInventory"
                ContentTemplate="{DataTemplate pages:ClothInventoryPage}" />
        </Tab>
        
        <Tab Title="Orders"
             Icon="icon_orders.svg">
            <ShellContent 
                Route="DressOrders"
                ContentTemplate="{DataTemplate pages:DressOrdersPage}" />
        </Tab>
        
        <Tab Title="Team"
             Icon="icon_people.svg">
            <ShellContent 
                Route="EmployeesPage"
                ContentTemplate="{DataTemplate pages:EmployeesPage}" />
        </Tab>
    </TabBar>

</Shell>
