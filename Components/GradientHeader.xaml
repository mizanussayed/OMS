<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.GradientHeader"
             x:Name="this">
    
    <Grid Background="{StaticResource PurplePinkGradient}" 
          Padding="20,20,20,20"
          HeightRequest="80">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="0" 
                           Spacing="4"
                           VerticalOptions="Center">
            <Label Text="{Binding Source={x:Reference this}, Path=Title}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource White}"/>
            <Label Text="{Binding Source={x:Reference this}, Path=Subtitle}" 
                   FontSize="13" 
                   TextColor="{StaticResource White}"
                   Opacity="0.9"
                   IsVisible="{Binding Source={x:Reference this}, Path=HasSubtitle}"/>
        </VerticalStackLayout>

        <Border Grid.Column="1" 
                Padding="8,6"
                BackgroundColor="Transparent"
                StrokeThickness="0"
                IsVisible="{Binding Source={x:Reference this}, Path=ShowActionButton}"
                VerticalOptions="Center">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={x:Reference this}, Path=ActionButtonCommand}" />
            </Border.GestureRecognizers>
            <HorizontalStackLayout Spacing="6">
                <Image Source="{Binding Source={x:Reference this}, Path=ActionButtonIcon}"
                       WidthRequest="16"
                       HeightRequest="16"
                       VerticalOptions="Center"
                       IsVisible="{Binding Source={x:Reference this}, Path=ActionButtonIcon, Converter={StaticResource StringToBoolConverter}}"/>
                <Label Text="{Binding Source={x:Reference this}, Path=ActionButtonText}" 
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>
</ContentView>
