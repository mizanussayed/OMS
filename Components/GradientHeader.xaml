<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.GradientHeader"
             x:Name="this">
    
    <Grid Background="{StaticResource PurplePinkGradient}" 
          Padding="16,20,16,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="0" 
                           Spacing="4"
                           VerticalOptions="Center">
            <Label Text="{Binding Source={x:Reference this}, Path=Title}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource White}"
                   HorizontalOptions="{Binding Source={x:Reference this}, Path=TitleAlignment}"/>
            <Label Text="{Binding Source={x:Reference this}, Path=Subtitle}" 
                   FontSize="14" 
                   TextColor="{StaticResource White}"
                   Opacity="0.9"
                   IsVisible="{Binding Source={x:Reference this}, Path=HasSubtitle}"
                   HorizontalOptions="{Binding Source={x:Reference this}, Path=TitleAlignment}"/>
        </VerticalStackLayout>

        <Button Grid.Column="1" 
                Text="{Binding Source={x:Reference this}, Path=ActionButtonText}" 
                FontSize="{Binding Source={x:Reference this}, Path=ActionButtonFontSize}"
                FontAttributes="Bold"
                TextColor="{StaticResource White}"
                Background="{Binding Source={x:Reference this}, Path=ActionButtonBackground}"
                BorderColor="{Binding Source={x:Reference this}, Path=ActionButtonBorderColor}"
                BorderWidth="{Binding Source={x:Reference this}, Path=ActionButtonBorderWidth}"
                Command="{Binding Source={x:Reference this}, Path=ActionButtonCommand}"
                Padding="12,8"
                CornerRadius="8"
                IsVisible="{Binding Source={x:Reference this}, Path=ShowActionButton}"
                VerticalOptions="Center"/>
    </Grid>
</ContentView>
