<?xml version="1.0" encoding="utf-8"?>
<ContentView
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="OMS.Components.CategoryChip"
 x:Name="Chip">
 <Border StrokeThickness="0" Padding="12,6"
 BackgroundColor="{Binding Source={x:Reference Chip}, Path=IsSelected, Converter={StaticResource BoolToColorConverter}}">
 <Border.StrokeShape>
 <RoundRectangle CornerRadius="16" />
 </Border.StrokeShape>
 <Border.GestureRecognizers>
 <TapGestureRecognizer Command="{Binding Source={x:Reference Chip}, Path=Command}" CommandParameter="{Binding Source={x:Reference Chip}, Path=CommandParameter}" />
 </Border.GestureRecognizers>
 <Label Text="{Binding Source={x:Reference Chip}, Path=Text}" />
 </Border>
</ContentView>
