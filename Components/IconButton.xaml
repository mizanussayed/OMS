<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.IconButton"
             x:Name="this">
    <Border Padding="{Binding Padding, Source={x:Reference this}}"
            StrokeThickness="0"
            BackgroundColor="Transparent">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command, Source={x:Reference this}}"
                                 CommandParameter="{Binding CommandParameter, Source={x:Reference this}}"/>
        </Border.GestureRecognizers>
        <HorizontalStackLayout Spacing="8" 
                              HorizontalOptions="Center"
                              VerticalOptions="Center">
            <!-- Icon -->
            <Label Text="{Binding Icon, Source={x:Reference this}}"
                   FontSize="{Binding IconSize, Source={x:Reference this}}"
                   TextColor="{Binding IconColor, Source={x:Reference this}}"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasIcon, Source={x:Reference this}}"/>
            
            <!-- Text -->
            <Label Text="{Binding Text, Source={x:Reference this}}"
                   FontSize="{Binding FontSize, Source={x:Reference this}}"
                   FontAttributes="{Binding FontAttributes, Source={x:Reference this}}"
                   TextColor="{Binding TextColor, Source={x:Reference this}}"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasText, Source={x:Reference this}}"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
