<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.EmptyState"
             x:Name="this">
    <Border Padding="{Binding Padding, Source={x:Reference this}}"
            StrokeThickness="1"
            Stroke="{StaticResource Gray100}"
            BackgroundColor="{StaticResource White}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="{StaticResource Gray900}"
                    Opacity="0.1"
                    Radius="8"
                    Offset="0,2" />
        </Border.Shadow>
        <VerticalStackLayout Spacing="12"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="32">
            <!-- Icon -->
            <Label Text="{Binding Icon, Source={x:Reference this}}"
                   FontSize="{Binding IconSize, Source={x:Reference this}}"
                   TextColor="{Binding IconColor, Source={x:Reference this}}"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasIcon, Source={x:Reference this}}"/>
            
            <!-- Title -->
            <Label Text="{Binding Title, Source={x:Reference this}}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Gray700}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   IsVisible="{Binding HasTitle, Source={x:Reference this}}"/>
            
            <!-- Message -->
            <Label Text="{Binding Message, Source={x:Reference this}}"
                   FontSize="14"
                   TextColor="{StaticResource Gray500}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   IsVisible="{Binding HasMessage, Source={x:Reference this}}"/>
            
            <!-- Action Button -->
            <Button Text="{Binding ActionText, Source={x:Reference this}}"
                    Command="{Binding ActionCommand, Source={x:Reference this}}"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="{StaticResource White}"
                    Background="{StaticResource PurplePinkGradient}"
                    CornerRadius="8"
                    Padding="16,10"
                    IsVisible="{Binding HasAction, Source={x:Reference this}}"
                    Margin="0,8,0,0"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
