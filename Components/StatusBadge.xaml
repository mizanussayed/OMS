<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.StatusBadge"
             x:Name="this">
    
    <Border BackgroundColor="{Binding Source={x:Reference this}, Path=BackgroundColor}"
            StrokeThickness="1"
            Stroke="{Binding Source={x:Reference this}, Path=BorderColor}"
            Padding="8,4">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>
        
        <Label Text="{Binding Source={x:Reference this}, Path=Text}" 
               FontSize="12"
               FontAttributes="Bold"
               TextColor="{Binding Source={x:Reference this}, Path=BadgeTextColor}"/>
    </Border>
</ContentView>
