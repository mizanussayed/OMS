<?xml version="1.0" encoding="utf-8"?>
<ContentView
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="OMS.Components.ProductCard">
 <Frame Padding="8" CornerRadius="12" HasShadow="True" Margin="6">
 <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
 <Image Grid.Row="0" Grid.ColumnSpan="2" Aspect="AspectFill" HeightRequest="160" Source="{Binding ImageUrl}" />
 <Label Grid.Row="1" Grid.Column="0" Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
 <Label Grid.Row="1" Grid.Column="1" Text="{Binding Price}" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
 <Button Grid.Row="2" Grid.ColumnSpan="2" Text="Add to Cart" Command="{Binding AddToCartCommand}" />
 </Grid>
 </Frame>
</ContentView>
