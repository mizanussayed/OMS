<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.LoadingSpinner"
             x:Name="this">
    <Grid HorizontalOptions="Center"
          VerticalOptions="Center"
          Padding="{Binding Padding, Source={x:Reference this}}">
        <VerticalStackLayout Spacing="12"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
            <!-- Spinner -->
            <ActivityIndicator IsRunning="{Binding IsLoading, Source={x:Reference this}}"
                             Color="{Binding SpinnerColor, Source={x:Reference this}}"
                             WidthRequest="{Binding SpinnerSize, Source={x:Reference this}}"
                             HeightRequest="{Binding SpinnerSize, Source={x:Reference this}}"
                             HorizontalOptions="Center"/>
            
            <!-- Loading Text -->
            <Label Text="{Binding LoadingText, Source={x:Reference this}}"
                   FontSize="14"
                   TextColor="{Binding TextColor, Source={x:Reference this}}"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasLoadingText, Source={x:Reference this}}"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
