<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Components.StatsCard"
             x:Name="this">
    
    <Border BackgroundColor="{StaticResource White}"
            StrokeThickness="1"
            Stroke="{StaticResource Gray100}"
            Padding="16">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="{StaticResource Gray900}"
                    Opacity="0.1"
                    Radius="8"
                    Offset="0,2" />
        </Border.Shadow>
        
        <VerticalStackLayout Spacing="8">
            <!-- Icon -->
            <Border WidthRequest="40" 
                    HeightRequest="40" 
                    BackgroundColor="{Binding Source={x:Reference this}, Path=IconBackgroundColor}"
                    Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Label Text="{Binding Source={x:Reference this}, Path=Icon}" 
                       FontSize="20" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Label -->
            <Label Text="{Binding Source={x:Reference this}, Path=Label}" 
                   FontSize="14" 
                   TextColor="{StaticResource Gray600}"/>
            
            <!-- Value -->
            <Label Text="{Binding Source={x:Reference this}, Path=Value}" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource Gray900}"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
