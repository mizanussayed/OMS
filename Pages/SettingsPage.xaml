<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:OMS.Components"
    xmlns:vm="clr-namespace:OMS.ViewModels"
    x:DataType="vm:SettingsViewModel"
    x:Class="OMS.Pages.SettingsPage"
    BackgroundColor="#80000000">
    
    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseCommand}"/>
        </Grid.GestureRecognizers>
        
        <!-- Bottom Sheet Dialog -->
        <Border BackgroundColor="White"
                StrokeThickness="0"
                VerticalOptions="End"
                HorizontalOptions="Fill"
                MaximumHeightRequest="500">
            <Border.GestureRecognizers>
                <TapGestureRecognizer />
            </Border.GestureRecognizers>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16,16,0,0" />
            </Border.StrokeShape>
            
            <Grid RowDefinitions="Auto,*,Auto" Padding="24">
                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,4">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="App Settings" 
                               FontSize="20"
                               FontAttributes="Bold" 
                               TextColor="{StaticResource Gray900}"/>
                        <Label Text="Configure unique code prefixes for cloths and orders"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Text="✕"
                            Command="{Binding CloseCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray600}"
                            FontSize="20"
                            Padding="0"
                            WidthRequest="32"
                            HeightRequest="32"
                            VerticalOptions="Start"/>
                </Grid>

                <!-- Form -->
                <ScrollView Grid.Row="1" Margin="0,20,0,0">
                    <VerticalStackLayout Spacing="24">
                        <!-- Info Card -->
                        <Border Padding="16"
                                BackgroundColor="{StaticResource Secondary}"
                                StrokeThickness="1"
                                Stroke="{StaticResource Primary}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="ℹ️"
                                       FontSize="20"
                                       FontFamily="{OnPlatform Android='sans-serif', iOS='Arial'}"
                                       VerticalOptions="Start"/>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Unique Code Prefixes"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"/>
                                    <Label Text="These prefixes will be used to generate unique codes for new cloths and orders. Example: CLT-1, CLT-2, ORD-1, ORD-2"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>
                        
                        <!-- Cloth Prefix -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Cloth Code Prefix"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray700}"/>
                            <components:InputField 
                                Text="{Binding ClothPrefix}"
                                Placeholder="e.g., CLT, FABRIC, CLOTH"
                                ErrorMessage="{Binding ClothPrefixError}"
                                MaxLength="10"/>
                            <Label Text="Example: CLT-1, CLT-2, CLT-3..."
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"/>
                        </VerticalStackLayout>

                        <!-- Order Prefix -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Order Code Prefix"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray700}"/>
                            <components:InputField 
                                Text="{Binding OrderPrefix}"
                                Placeholder="e.g., ORD, ORDER, BO"
                                ErrorMessage="{Binding OrderPrefixError}"
                                MaxLength="10"/>
                            <Label Text="Example: ORD-1, ORD-2, ORD-3..."
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"/>
                        </VerticalStackLayout>
                        
                        <!-- Reset Button -->
                        <Button Text="Reset to Defaults (CLT/ ORD)"
                                Command="{Binding ResetToDefaultsCommand}"
                                BackgroundColor="{StaticResource Gray100}"
                                TextColor="{StaticResource Gray700}"
                                BorderColor="{StaticResource Gray300}"
                                BorderWidth="1"
                                CornerRadius="8"
                                HeightRequest="44"
                                FontSize="14"/>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Action Buttons -->
                <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                    <Button Grid.Column="0"
                            Text="Cancel"
                            Command="{Binding CloseCommand}"
                            BackgroundColor="{StaticResource Gray100}"
                            TextColor="{StaticResource Gray900}"
                            CornerRadius="12"
                            HeightRequest="48"
                            FontSize="16"
                            FontAttributes="Bold"/>
                    <Button Grid.Column="1"
                            Text="{Binding IsSaving, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Saving...|Save Settings'}"
                            Command="{Binding SaveSettingsCommand}"
                            IsEnabled="{Binding IsSaving, Converter={StaticResource InvertedBoolConverter}}"
                            Background="{StaticResource PurplePinkGradient}"
                            TextColor="{StaticResource White}"
                            CornerRadius="12"
                            HeightRequest="48"
                            FontSize="16"
                            FontAttributes="Bold"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
