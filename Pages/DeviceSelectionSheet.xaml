<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMS.Pages.DeviceSelectionSheet"
             BackgroundColor="#80000000">
    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
        </Grid.GestureRecognizers>
        <Border BackgroundColor="White"
                StrokeThickness="0"
                VerticalOptions="End"
                HorizontalOptions="Fill"
                x:Name="DeviceSheet">
            <Border.GestureRecognizers>
                <TapGestureRecognizer />
            </Border.GestureRecognizers>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16,16,0,0" />
            </Border.StrokeShape>
            <VerticalStackLayout Padding="24,16" Spacing="20">
                <BoxView WidthRequest="40"
                         HeightRequest="4"
                         CornerRadius="2"
                         BackgroundColor="#d1d5db"
                         HorizontalOptions="Center"/>
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                    <Label Grid.Column="0"
                           Text="Select Printer" 
                           FontSize="20"
                           FontAttributes="Bold" 
                           TextColor="#111827"/>
                    <Button Grid.Column="1"
                            Text="?"
                            Clicked="OnCancelClicked"
                            BackgroundColor="Transparent"
                            TextColor="#6b7280"
                            FontSize="20"
                            Padding="0"
                            WidthRequest="32"
                            HeightRequest="32"/>
                </Grid>
                <Label Text="Select a paired Bluetooth device to print"
                       FontSize="14"
                       TextColor="#6b7280"/>
                <ScrollView MaximumHeightRequest="300">
                    <VerticalStackLayout x:Name="DeviceListContainer" Spacing="8"/>
                </ScrollView>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
