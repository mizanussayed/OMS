<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:OMS.Components"
    xmlns:vm="clr-namespace:OMS.ViewModels"
    x:DataType="vm:AddMakerViewModel"
    x:Class="OMS.Pages.AddMakerDialog"
    BackgroundColor="#80000000">

    <!-- Semi-transparent overlay -->
    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseCommand}"/>
        </Grid.GestureRecognizers>

        <!-- Bottom Sheet Dialog -->
        <Border BackgroundColor="White"
                StrokeThickness="0"
                VerticalOptions="End"
                HorizontalOptions="Fill"
                MaximumHeightRequest="700">
            <Border.GestureRecognizers>
                <TapGestureRecognizer />
            </Border.GestureRecognizers>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16,16,0,0" />
            </Border.StrokeShape>

            <Grid RowDefinitions="Auto,*,Auto" Padding="24">
                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,4">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="Add New Maker" 
                               FontSize="20"
                               FontAttributes="Bold" 
                               TextColor="{StaticResource Gray900}"/>
                        <Label Text="Register a new maker to handle dress orders"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Text="✕"
                            Command="{Binding CloseCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray600}"
                            FontSize="20"
                            Padding="0"
                            WidthRequest="32"
                            HeightRequest="32"
                            VerticalOptions="Start"/>
                </Grid>

                <!-- Form -->
                <ScrollView Grid.Row="1" Margin="0,20,0,0">
                    <VerticalStackLayout Spacing="16">
                        <components:InputField 
                            Label="Name"
                            Text="{Binding Name}"
                            Placeholder="Enter maker's full name"/>
                        <components:InputField Label="Username"
                            Text="{Binding Username}"
                            Placeholder="Enter username for login"/>

                        <components:InputField Label="Mobile Number"
                            Text="{Binding MobileNumber}"
                            Placeholder="Enter mobile number"
                            Keyboard="Telephone"/>

                        <components:InputField Label="Password"
                            Text="{Binding Password}"
                            Placeholder="Enter password"
                            IsPassword="True"/>

                        <components:InputField Label="Confirm Password"
                            Text="{Binding ConfirmPassword}"
                            Placeholder="Confirm password"
                            IsPassword="True"/>

                        <!-- Info Box -->
                                <HorizontalStackLayout Spacing="8">
                                <Label Text="ℹ️"
                                       FontSize="14"
                                       VerticalOptions="Start"/>
                                <Label Text="The maker will use username and password to log in"
                                       FontSize="12"
                                       TextColor="{StaticResource Purple900}"
                                       LineBreakMode="HeadTruncation"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>

                <components:ActionButton Grid.Row="2"
                         Text="Add Maker"
                         Command="{Binding AddMakerCommand}"
                         Variant="Primary"
                         Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>