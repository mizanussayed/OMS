<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:OMS.Components"
    x:Class="OMS.Pages.AddMakerPage"
    Title="Add Maker"
    BackgroundColor="{StaticResource Gray50}">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <!-- Header -->
            <components:GradientHeader Title="Add New Maker"
                                      Subtitle="Add a new tailor/maker to the system"
                                      TitleAlignment="Start"
                                      ShowActionButton="False"/>

            <!-- Form Card -->
            <Border BackgroundColor="{StaticResource White}"
                    StrokeThickness="1"
                    Stroke="{StaticResource Gray100}"
                    Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray900}"
                            Opacity="0.1"
                            Radius="8"
                            Offset="0,2" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="16">
                    <components:InputField Label="Name"
                                           Text="{Binding Name}"
                                           Placeholder="Enter maker's full name"/>
                    <components:InputField Label="Username"
                                           Text="{Binding Username}"
                                           Placeholder="Enter username for login"/>
                    <components:InputField Label="Password"
                                           Text="{Binding Password}"
                                           Placeholder="Enter password"
                                           IsPassword="True"/>
                    <components:InputField Label="Confirm Password"
                                           Text="{Binding ConfirmPassword}"
                                           Placeholder="Confirm password"
                                           IsPassword="True"/>
                </VerticalStackLayout>
            </Border>

            <!-- Add Button -->
            <components:ActionButton Text="Add Maker"
                                    Command="{Binding AddMakerCommand}"
                                    Variant="Success"
                                    HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>